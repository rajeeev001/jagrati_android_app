<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.lenovopc.jagrati.AddSubjectVolunteer">

    <include layout="@layout/progress_bar" />

    <RelativeLayout
        android:id="@+id/addSubjectVolunteerForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/popup_header" />

            <Spinner
                android:id="@+id/volunteerDropdown"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/field_line"
                android:ems="10"
                android:inputType="text"
                android:textColor="#4a4a4a"
                android:textColorHint="#4a4a4a"
                android:textSize="14sp"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <Button
            android:id="@+id/formSubmitBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:background="#f17e01"
            android:text="ADD"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </RelativeLayout>
</FrameLayout>
